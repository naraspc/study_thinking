{{>layouts/header}}

{{#article}}
<form class="container" action="/articles/update" method="post"> {{!create로 dto 전달 Post방식}}
    <input name="id" type="hidden" value="{{id}}" /> {{!id값을 숨겨서 보내주기}}
    <div class="mb-3">
        <label class="form-label">제목</label>
        <input type="text" class="form-control" name="title" value="{{title}}">
    </div>

    <div class="mb-3">
        <label class="form-label">내용</label>
        <textarea class="form-control" rows="3" name="content">{{content}}</textarea>
    </div>

    <button type="submit" class="btn btn-primary" >수정</button>
    <a href="/articles/{{id}}">Back</a> {{!index로 돌아가기}}
</form>
{{/article}}







{{>layouts/footer}}
